# AI-Powered Artist Promotion Assistant
# Environment Variables Template - LOCAL-ONLY VERSION
# Copy this file to .env and customize as needed

# Flask Settings
SECRET_KEY=your-secret-key-here-change-in-production
FLASK_ENV=development
PORT=5000

# Database (Local PostgreSQL)
DATABASE_URL=postgresql://localhost/artist_promotion

# Ollama Settings (LOCAL AI - No API Key Needed!)
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.2:3b

# Reddit API (FREE - https://www.reddit.com/prefs/apps)
# Only needed if you want to POST/COMMENT (reading is free without auth)
REDDIT_CLIENT_ID=optional-for-read-only
REDDIT_CLIENT_SECRET=optional-for-read-only
REDDIT_USER_AGENT=ArtistPromotionBot/1.0

# Instagram (uses Playwright browser automation - no API key needed!)
INSTAGRAM_USERNAME=optional-for-login
INSTAGRAM_PASSWORD=optional-for-login

# Pinterest (uses Playwright browser automation - no API key needed!)
PINTEREST_EMAIL=optional-for-login
PINTEREST_PASSWORD=optional-for-login

# Playwright Settings
PLAYWRIGHT_HEADLESS=true
PLAYWRIGHT_TIMEOUT=30000

# Logging
LOG_LEVEL=INFO
LOG_TO_FILE=true
